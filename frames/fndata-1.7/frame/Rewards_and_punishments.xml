    <FE bgColor="FF0000" fgColor="FFFFFF" coreType="Core" cBy="MJE" cDate="08/28/2001 03:01:41 PDT Tue" abbrev="Agt" name="Agent" ID="1766">
        <definition>&lt;def-root&gt;The &lt;fen&gt;Agent&lt;/fen&gt; is the person doing the rewarding or punishing.
&lt;ex&gt;&lt;fex name="Agt"&gt;Jake's&lt;/fex&gt; &lt;t&gt;rewards&lt;/t&gt; to his best workers were very generous.&lt;/ex&gt;&lt;/def-root&gt;</definition>
        <semType name="Sentient" ID="5"/>
    </FE>
    <FE bgColor="808080" fgColor="FFFFFF" coreType="Peripheral" cBy="MJE" cDate="08/28/2001 03:01:43 PDT Tue" abbrev="Ins" name="Instrument" ID="1767">
        <definition>&lt;def-root&gt;The &lt;fen&gt;Instrument&lt;/fen&gt; with which the reward or punishment is carried out.&lt;/def-root&gt;</definition>
        <semType name="Physical_entity" ID="70"/>
    </FE>
    <FE bgColor="800080" fgColor="FFFFFF" coreType="Peripheral" cBy="MJE" cDate="08/28/2001 03:02:12 PDT Tue" abbrev="Purp" name="Purpose" ID="1768">
        <definition>&lt;def-root&gt;The &lt;fen&gt;Purpose&lt;/fen&gt; of the reward or punishment.&lt;/def-root&gt;</definition>
        <semType name="State_of_affairs" ID="177"/>
    </FE>
    <FE bgColor="1E90FF" fgColor="FFFFFF" coreType="Core-Unexpressed" cBy="MJE" cDate="08/28/2001 05:48:26 PDT Tue" abbrev="Action" name="Response_action" ID="1769">
        <definition>&lt;def-root&gt;The reward or punishment given to the &lt;fen&gt;Evaluee&lt;/fen&gt; by the &lt;fen&gt;Agent&lt;/fen&gt;.
&lt;ex&gt;If a person be guilty of impiety let him be &lt;t&gt;punished&lt;/t&gt; &lt;fex name="Action"&gt;with death&lt;/fex&gt;.&lt;/ex&gt;&lt;/def-root&gt;</definition>
    </FE>
    <FE bgColor="FF69B4" fgColor="FFFFFF" coreType="Peripheral" cBy="MJE" cDate="08/31/2001 07:50:29 PDT Fri" abbrev="Degr" name="Degree" ID="1823">
