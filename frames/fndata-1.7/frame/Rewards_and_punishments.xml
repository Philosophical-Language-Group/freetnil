        <semType name="Degree" ID="172"/>
    </FE>
    <FE bgColor="9400D3" fgColor="FFFFFF" coreType="Extra-Thematic" cBy="MJE" cDate="08/31/2001 07:50:32 PDT Fri" abbrev="Depict" name="Depictive" ID="1824">
